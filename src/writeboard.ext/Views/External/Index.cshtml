<!-- Contact Section -->
<div class="w3-container w3-padding-64" id="contact">
    <h3 class="w3-center"><i class="fa fa-envelope"></i> Contact Us</h3>
    <p class="w3-center w3-large">Lets get in touch.</p>
    <div class="w3-row-padding" style="margin-top:64px">
        <div class="w3-half">
            <p><i class="fa fa-map-marker fa-fw w3-xxlarge w3-margin-right"></i> Boston, US
            <p>
            <p><i class="fa fa-phone fa-fw w3-xxlarge w3-margin-right"></i> Phone: +1 8573344095</p>
            <p><i class="fa fa-envelope fa-fw w3-xxlarge w3-margin-right"> </i> Email: <a href="mailto://writeboard-team@outlook.com">writeboard-team@outlook.com</a></p>
            <br>
            <form action="/contact" method="post">
                <div class="row">
                    <label>
                        <i class="fa fa-user"></i>
                        <b>Name</b>
                    </label>
                    <input type="text" class="w3-input w3-border" id="wb-name" runat="server" placeholder="Contact Full Name" name="wb-name" required>
                </div>
                <p></p>

                <div class="row">
                    <label>
                        <i class="fa fa-envelope"></i>
                        <b>Email Address</b>
                    </label>
                    <input type="email" class="w3-input w3-border" id="wb-email" runat="server" TextMode="Email" placeholder="Contact Email" name="wb-email" required>
                </div>
                <p></p>

                <div class="row">
                    <label>
                        <i class="fa fa-info-circle"></i>
                        <b>Subject</b>
                    </label>
                    <input type="text" class="w3-input w3-border" id="wb-subject" runat="server" placeholder="Message Subject" name="wb-subject" required>
                </div>
                <p></p>

                <div class="row">
                    <label>
                        <i class="fa fa-align-left"></i>
                        <b>Message</b>
                    </label>
                    <input type="text" class="w3-input w3-border" id="wb-msg" runat="server" placeholder="Message Body" name="wb-msg" required>
                </div>
                <p></p>

                <button id="wb-contact-submit" type="submit">
                    <i class="fa fa-paper-plane"></i> Send Message
                </button>
            </form>
        </div>

        <div class="w3-half">
            <!-- Add Google Maps -->
            <div id="googleMap" class="w3-greyscale-max" style="width:100%;height:510px;"></div>
        </div>
    </div>
</div>